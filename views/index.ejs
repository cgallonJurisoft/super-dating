<!DOCTYPE html>
<html lang="fr">

	<head>
		<%- include("includes/headContent") %>
		<!-- <link rel="stylesheet" href="/styles/index.css"> -->
	</head>

	<body>
		<%- include("includes/header") %>
		<div class="spacer vertical lg"></div>

		<main class="main full">
			<h2 class="h2"><%= heroes.length %> random match<%= heroes.length > 1 ? "es" : "" %>:</h2>
			
			<div class="spacer vertical"></div>
			<section class="grid sm heroes-list">
				<% for (const hero of heroes) { %>
					<article class="card hero">
						<header class="card__header">
							<h2 class="h4"><%= hero.name %></h2>
							<% if (hero.bio) { %>
								<div class="spacer vertical xs"></div>
								<p><%= hero.bio %></p>
							<% } %>
						</header>
					</article>
				<% } %>
			</div>
		</main>

	</body>

</html>
<!DOCTYPE html>
<html lang="fr">

	<head>
		<%- include("includes/headContent") %>
		<link rel="stylesheet" href="/styles/home/hero-card.css">
	</head>

	<body>
		<%- include("includes/header") %>
		<div class="spacer vertical xl"></div>

		<main class="main full">
			<h1 class="h1"><%= title %></h1>
			
			<div class="spacer vertical lg"></div>
			<section class="grid sm heroes-list">
				<% for (const hero of heroes) { %>
					<a href="/hero/<%= hero.id %>" class="card hero-card">
						<article>
							<header class="flex column align-center gap-sm">
								<div class="hero-card__photo">
									<% if (hero.photo) { %>
										<img src="<%= hero.photo %>" alt="<%= hero.name %>">
									<% } else { %>
										<i class="fas fa-mask"></i>
									<% } %>
								</div>

								<h2 class="h4">
									<%= hero.name %>&nbsp;
									<% if (hero.sex_id === 1) { %><i class="h6 opacity-50 fa-solid fa-mars"></i><% } %>
									<% if (hero.sex_id === 2) { %><i class="h6 opacity-50 fa-solid fa-venus"></i><% } %>
								</h2>
							</header>

							<% if (hero.bio) { %>
								<div class="spacer vertical xs"></div>
								<p class="text-center text-truncate text-truncate--1">
									<%= hero.bio %>
								</p>
							<% } %>
						</article>
					</a>
				<% } %>
			</div>
		</main>

	</body>

</html>